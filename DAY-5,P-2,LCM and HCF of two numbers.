#include <stdio.h>
#include <stdlib.h>
int main()
{
    int a,b,i,min,hcf,lcm;
    printf("enter two numbers");
    scanf("%d%d",&a,&b);
    if(a<b)
    min=a;
    else
    min=b;
    for(i=min;i>=1;i--)
    if(a%i==0&&b%i==0)
    break;
    printf("hcf is %d\n",i);
    lcm=(a*b)/i;
    printf("lcm is %d",lcm);
    return 0;
}

